<style>

.section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
    .about-main-container{
        display:flex;
    }
    .about-main-text-container{
        width:50%
    }
    .flex-container-text{
        width:50%;
    }
    .about-img-container{
        width:25%;
    }
    .about-img-container img{
        height:auto;
        width:100%;
    }
    .about-members{
        display:flex;
        align-items:center;
        justify-content:center;
        gap:2rem;
        padding-bottom:4rem;
    }
    .team-member-info{
        width:75%;
    }
    .block-heading{
    font-size: 30px;
    color: #000;
    padding-bottom: 2rem;
    font-weight:800;
    }
    .about-main-text-container a{
        text-decoration:none;
        color:#000;
    }
    .team-member-text{
        font-size:12px;
        color:#000;
        font-weight:500;
    }
    .position-devider-text{
    font-size:14px;
    color:#000;
    font-weight:600;
    }

    @media screen and (max-width:990px){
    .about-main-container{
      flex-direction:column;
    }
    .about-main-text-container {
    width: 100%;
    }
    .flex-container-text {
    width: 100%;
} 
    }


</style>

<div class="section-{{ section.id }}-padding">
<div class="page-width">
  <div class="about-main-container">
    <div class="about-main-text-container">{{ section.settings.add_your_text_here }}</div>

    <div class="flex-container-text">
      <div class="block-heading">{{ section.settings.heading }}</div>

      {% for block in section.blocks %}
        {% case block.type %}
            {% when 'team-members' %}
        <div class="about-members">
        <div class="about-img-container">
          {% render 'picture',
            class: '',
            mobileSrc: block.settings.team_member_image,
            desktopSrc: block.settings.team_member_image
          %}
        </div>
        <div class="team-member-info">
        <div class="team-member-text">{{ block.settings.team_member_name }}</div>
        <div class="team-member-text"> {{ block.settings.about_team_member }}</div>
        </div>
        </div>
        {% when 'position_devider' %}
        <div class="position-devider-text">{{ block.settings.add_text }}</div>
        {%  endcase %}
      {% endfor %}
      
    </div>
  </div>
</div>
</div>

{% schema %}
{
  "name": "about-section",
  "tag": "section",
  "settings": [
    {
      "type": "richtext",
      "label": "Add Your Text Here",
      "id": "add_your_text_here"
    },
    {
      "type": "text",
      "label": "Add Your Team Text",
      "id": "heading"
    },
        {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  
  ],
  "blocks": [
    {
      "type": "team-members",
      "name": "team-members",
      "settings": [
        {
          "type": "image_picker",
          "label": "Team Member Image",
          "id": "team_member_image"
        },
        {
          "type": "richtext",
          "label": "Team Member Name",
          "id": "team_member_name"
        },
        {
          "type": "textarea",
          "label": "About Team Member",
          "id": "about_team_member"
        }
      ]
    },
    {
      "type": "position_devider",
      "name": "position devider",
      "settings": [
        {
          "type": "text",
          "label": "add text ",
          "id": "add_text"
        }
      ]
    }

  ],
  "presets": [
    {
      "name": "about-section"
    }
  ]
}
{% endschema %}
