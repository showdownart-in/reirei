{{ 'brand-section.css' | asset_url | stylesheet_tag }}

<style>
        @media screen and (min-width:749px){
             .section-{{ section.id }} .grid{
            column-gap: 40px;
            row-gap: 40px;
        }
        .section-{{ section.id }} .grid--4-col-desktop .grid__item {
           width:  calc(25% - 40px * 3 / 4);

        }
        }
        @media screen and (min-width: 750px) and (max-width: 989px) {
             .section-{{ section.id }} .grid--2-col .grid__item {
           width:  calc(50% - 16px * 3 / 4);


        }
         .section-{{ section.id }} .grid{
            column-gap: 1.2rem;
            row-gap: 1.2rem;
        }

        }

        @media screen and (max-width:749px){
            .section-{{ section.id }} .grid--2-col .grid__item {
           width:  calc(50% - 16px * 3 / 4);
        }
        .section-{{ section.id }} .grid{
            column-gap: 1.2rem;
            row-gap: 1.2rem;
        }
        .collection-image{
          height:119px;
        }
        }

    .section-{{ section.id }}-padding{
       padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;

  }
</style>
<div class="section-{{ section.id }}-padding">
  <div class="page-width section-{{ section.id }}">
    <div class="brand-main-title h2">{{ section.settings.title }}</div>
    <div class="grid grid--2-col grid--2-col-tablet grid--4-col-desktop">
      {% for collection in section.settings.add_all_collections %}
        <div class="grid__item brand-container">
          <div class="collection-image">
            
              {% render 'picture',
                class: '',
                mobileSrc: collection.featured_image,
                desktopSrc: collection.featured_image
              %}
            
          </div>
          <a href="{{ collection.url }}" class="brand-title">
            {{ collection.title }}
          </a>
        </div>
      {% endfor %}
    </div>
    <a href="collections" class="view-all-btn">See All Brands</a>
  </div>
</div>

{% schema %}
{
  "name": "brand section",
  "tag": "section",
  "settings": [
    {
      "type": "collection_list",
      "label": "add all collections",
      "id": "add_all_collections",
      "limit": 8
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "brand section"
    }
  ]
}
{% endschema %}
