{{ 'brand-section.css' | asset_url | stylesheet_tag }}
<style>
 .section-{{ section.id }}-padding{
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;

  }
  @media screen and (max-width:749px){
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
 }
</style>


<div class="section-{{ section.id }}-padding">
<div class="page-width section-{{ section.id }}">
  <div class=" h2 button-title">{{ section.settings.title }}</div>
  <div class="grid grid--2-col grid--2-col-tablet grid--4-col-desktop brand-button-main-container">
    {% for collection in section.settings.add_all_collections %}
      <div class="grid__item brand-btn-container">
        <a href="{{ collection.url }}" class="btn-title">
          {{ collection.title }}
        </a>
      </div>
    {% endfor %}
  </div>
</div>
</div>




{% schema %}
{
  "name": "brand buttons",
  "tag": "section",
  "settings": [
    {
      "type": "collection_list",
      "label": "add all collections",
      "id": "add_all_collections",
      "limit": 8
    },
    {
      "type": "text",
      "id": "title",
      "label": "Enter title"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [],
  "presets": [
    {
      "name": "brand buttons"
    }
  ]
}
{% endschema %}