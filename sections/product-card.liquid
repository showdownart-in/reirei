<script src="{{ 'collection-carousel.js' |  asset_url }}" defer></script>
 {{ 'product-card.css' | asset_url | stylesheet_tag }}
<script src="{{ 'product-card.js' | asset_url }}" defer="defer"></script>
<style>
    .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

</style>



<div class="page-width">
 <div class="section-{{ section.id }}-padding">
  <div class="h2 brand-main-title ">{{ section.settings.productHeading_text }}</div>

<splide-carousel
  class="splide"
  id="{{ section.id }}"
  data-desktop-per-page="4"
  data-mobile-per-page="2"
  data-gap="20"
  data-gaptab="20"
  data-desktoparrow="false"
  data-mobilearrow="false"
  data-desktoppagination=true
  data-mobilepagination="true"
  data-desktop-padding-left="0"
  data-desktop-padding-right="0"
  data-mobilepaddingleft="0"
  data-mobilepaddingright="0"
  data-loop="loop"
  data-autoplay="false"
>
  <div class="splide__track ">
    <div class="splide__list ">
      {% for product in section.settings.product_list %}
        <div class="splide__slide">
          {% render 'product-snippet', product: product, sectionId: section.id  %}
        </div>
      {% endfor %}
    </div>
  </div>
</splide-carousel>
</div>
<div class="add-to-card-sucess">
   <div>{{ section.settings.sucess-message }}</div>

</div>
</div>


{% schema %}
{
  "name": "Product section",
  "tag": "section",
  "settings": [
    {
          "type": "text",
          "id": "productHeading_text",
          "label": "Product Heading",
          "default": "This is Content"

    },
     {
          "type": "text",
          "id": "sucess-message",
          "label": "Sucess message",
          "default": "Added to cart"

    }
    ,{
      "type": "product_list",
      "id": "product_list",
      "label": "Product"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }

  ],
  "presets": [
    {
      "name": "product card"
    }
  ]
}
{% endschema %}
